}

.copyright {
  margin-top: auto;
  font-size: 1.3rem;
  text-align: center;
  color: #aaa;
}

.twitter-link:link,
.twitter-link:visited {
  color: #aaa;
  transition: all 0.2s;
}

.twitter-link:hover,
.twitter-link:active {
  color: #ececec;
}

/* MAP */
#map {
  flex: 1;
  height: 100%;
  background-color: #aaa;
}

/* Popup width is defined in JS using options */
